{
  "name": "password-hasher",
  "description": "A tool for generating unique passwords for each website.",
  "version": "0.0.1",
  "readme": "README.md",
  "license": "MIT",
  "main": "build/index.js",
  "typings": "build/index",
  "files": [
    "build/!(test-)*"
  ],
  "scripts": {
    "format": "tsfmt -r && tslint --fix --project .",
    "lint": "tsfmt --verify && tslint --project .",
    "prebuild": "npm run format && npm run lint",
    "build": "npm run prebuild && webpack --config ./webpack.prod.js",
    "build:watch": "npm run prebuild && webpack-dev-server",
    "test:nobuild": "mocha --colors build/test/*.js",
    "test": "npm run build && npm run test:nobuild",
    "prepublishOnly": "npm run lint && npm run test",
    "clean": "rimraf ./build ./node_modules ./typings",
    "webpack": "webpack --config ./webpack.prod.js"
  },
  "devDependencies": {
    "@types/big-integer": "0.0.31",
    "@types/chai": "~3.4.35",
    "@types/clipboard": "~1.5.34",
    "@types/crypto-js": "~3.1.33",
    "@types/lodash": "~4.14.71",
    "@types/material-ui": "~0.20.5",
    "@types/mocha": "~2.2.40",
    "@types/react": "~15.0.31",
    "@types/react-dom": "~15.5.1",
    "@types/react-redux": "^4.4.45",
    "@types/react-tap-event-plugin": "0.0.30",
    "awesome-typescript-loader": "~3.1.3",
    "chai": "~3.5.0",
    "css-loader": "~0.28.4",
    "mocha": "~3.2.0",
    "node-sass": "~4.5.3",
    "rimraf": "~2.6.1",
    "sass-loader": "~6.0.6",
    "style-loader": "~0.18.2",
    "tslint": "~4.5.1",
    "typescript": "~2.4.1",
    "typescript-formatter": "~5.1.2",
    "uglifyjs-webpack-plugin": "~1.0.0-beta.2",
    "webpack": "~3.0.0",
    "webpack-dev-server": "~2.5.0",
    "webpack-merge": "~4.1.0"
  },
  "dependencies": {
    "big-integer": "~1.6.23",
    "clipboard": "~1.7.1",
    "crypto-js": "~3.1.9-1",
    "lodash": "~4.17.4",
    "material-ui": "~0.18.7",
    "react": "~15.6.1",
    "react-dom": "~15.6.1",
    "react-redux": "~5.0.5",
    "react-tap-event-plugin": "~2.0.1",
    "redux": "~3.7.2",
    "redux-devtools-extension": "~2.13.2",
    "redux-thunk": "~2.2.0",
    "reselect": "~3.0.1",
    "scrypt-async": "~1.3.1"
  }
}
